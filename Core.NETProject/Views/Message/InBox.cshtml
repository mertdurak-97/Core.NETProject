@using EntityLayer
@model List<Message>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<table class="table table-striped table-dark">
    <tr>
        <th>#</th>
        <th>KONU</th>
        <th>GÖNDEREN</th>
        <th>TARİH</th>
        <th>MESAJI AÇ</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.MessageID</th>
            <td>@item.Subject</td>
            <td>@item.SenderUser.UserName</td>
            <td>@item.MessageDate.ToShortDateString()</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-primary">Mesajı aç </a></td>
        </tr>
    }
</table>

