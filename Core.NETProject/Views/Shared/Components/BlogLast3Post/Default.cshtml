@using EntityLayer
@model List<Blog>
 
				<h3>Son Gönderiler</h3>
				@foreach (var item in Model)
				{
					<div class="tech-btm">
						
						<div class="blog-grids row mb-3">
							<div class="col-md-5 blog-grid-left">
								<a href="/Blog/BlogReadAll/@item.BlogID">
									<img src="~/web/images/@item.BlogImage" class="card-img-top img-fluid" alt="">
								</a>
							</div>
					</div>
						<div class="col-md-7 blog-grid-right">
								<h5>
									<a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogContent.Substring(0,item.BlogContent.Substring(0,45).LastIndexOf(" "))... </a>
								</h5>
								<div class="sub-meta">
									<span>
										<i class="far fa-clock"></i>@(((DateTime)item.BlogCreateDate).ToString("dd-MMM-yyyy"))</span>
								</div>
							</div>
					</div>
				}
					