@using EntityLayer
@model List<Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/inspinia-gh-pages/js/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/js/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/js/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/js/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/js/css/style.css" rel="stylesheet">

</head>

<body>

        <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox ">
                    <div class="ibox-content mailbox-content">
                        <div class="file-manager">
                            <a class="btn btn-block btn-primary compose-mail" href="/Admin/AdminMessage/ComposeMessage/">Mesaj Kutusu</a>
                            <div class="space-25"></div>
                            <h5>Dosyalar</h5>
                            <ul class="folder-list m-b-md" style="padding: 0">
                                <li><a href="/Admin/AdminMessage/Index/"> <i class="fa fa-inbox "></i>Gelen Mesajlar <span class="label label-warning float-right">16</span> </a></li>
                                <li><a href="/Admin/AdminMessage/Sendbox/"> <i class="fa fa-envelope-o"></i>Gönderilen Mesaj</a></li>
                                <li><a href="mailbox.html"> <i class="fa fa-certificate"></i>Önemli Mesajlar</a></li>
                                <li><a href="mailbox.html"> <i class="fa fa-file-text-o"></i>Taslaklar <span class="label label-danger float-right">2</span></a></li>
                                <li><a href="mailbox.html"> <i class="fa fa-trash-o"></i>Çöp Kutusu</a></li>
                            </ul>
                            <h5>Categories</h5>
                            <ul class="category-list" style="padding: 0">
                                <li><a href="#"> <i class="fa fa-circle text-navy"></i> Çalışmalar </a></li>
                                <li><a href="#"> <i class="fa fa-circle text-danger"></i> Dökümanlar</a></li>
                                <li><a href="#"> <i class="fa fa-circle text-primary"></i> Sosyal</a></li>
                                <li><a href="#"> <i class="fa fa-circle text-info"></i> Reklam</a></li>
                                <li><a href="#"> <i class="fa fa-circle text-warning"></i> Müşteriler</a></li>
                            </ul>

                            <h5 class="tag-title">Labels</h5>
                            <ul class="tag-list" style="padding: 0">
                                <li><a href=""><i class="fa fa-tag"></i> Aile</a></li>
                                <li><a href=""><i class="fa fa-tag"></i> İş Hayatı</a></li>
                                <li><a href=""><i class="fa fa-tag"></i> Ev</a></li>
                                <li><a href=""><i class="fa fa-tag"></i> Çocuk</a></li>
                                <li><a href=""><i class="fa fa-tag"></i> Tatil&Gezi</a></li>
                                <li><a href=""><i class="fa fa-tag"></i> Müzik</a></li>
                                <li><a href=""><i class="fa fa-tag"></i> Fotoğraflar</a></li>
                                <li><a href=""><i class="fa fa-tag"></i> Film</a></li>
                            </ul>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 animated fadeInRight">
            <div class="mail-box-header">

                <h2>
                    Gelen Kutusu
                </h2>
                <div class="mail-tools tooltip-demo m-t-md">
                    <div class="btn-group float-right">
                        <button class="btn btn-white btn-sm"><i class="fa fa-arrow-left"></i></button>
                        <button class="btn btn-white btn-sm"><i class="fa fa-arrow-right"></i></button>

                    </div>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="left" title="Refresh inbox"><i class="fa fa-refresh"></i> Yenile</button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Mark as read"><i class="fa fa-eye"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Mark as important"><i class="fa fa-exclamation"></i> </button>
                    <button class="btn btn-white btn-sm" data-toggle="tooltip" data-placement="top" title="Move to trash"><i class="fa fa-trash-o"></i> </button>

                </div>
            </div>
                <div class="mail-box">
                
                <table class="table table-hover table-mail">
                <tbody>
                    @foreach (var item in Model)
                    {
                         <tr class="unread">
                            <td class="check-mail">
                                <input type="checkbox" class="i-checks">
                            </td>
                            <td class="mail-ontact"><a href="mail_detail.html">@item.SenderUser.UserName</a></td>
                            <td class="mail-subject"><a href="mail_detail.html">@item.Subject</a></td>
                            <td class=""><i class="fa fa-paperclip"></i></td>
                            <td class="text-right mail-date">@item.MessageDate</td>
                        </tr>
                    }
                </tbody>
                </table>
                </div>
            </div>
        </div>
        </div>

    <!-- Mainly scripts -->
    <script src="~/inspinia-gh-pages/js/jquery-3.1.1.min.js"></script>
    <script src="~/inspinia-gh-pages/js/js/popper.min.js"></script>
    <script src="~/inspinia-gh-pages/js/js/bootstrap.js"></script>
    <script src="~/inspinia-gh-pages/js/js/plugins/metisMenu/jquery.metisMenu.js"></script>
    <script src="~/inspinia-gh-pages/js/js/plugins/slimscroll/jquery.slimscroll.min.js"></script>

    <!-- Custom and plugin javascript -->
    <script src="~/inspinia-gh-pages/js/js/inspinia.js"></script>
    <script src="~/inspinia-gh-pages/js/js/plugins/pace/pace.min.js"></script>

    <!-- iCheck -->
    <script src="~/inspinia-gh-pages/js/js/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(document).ready(function(){
            $('.i-checks').iCheck({
                checkboxClass: 'icheckbox_square-green',
                radioClass: 'iradio_square-green',
            });
        });
    </script>
</body>

</html>
